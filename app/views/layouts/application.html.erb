<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to 'Main', root_path %>
<%= link_to 'Awaiting', :awaiting %>
<% if user_signed_in? %>
  <%# if can? :read, @book %>
    <%#= link_to 'Tales', tales_path %>
  <%# end %>
  Logged as: <%= current_user.username %> | 
  <%= link_to 'Add new tale', new_tale_path %>
  <%#= link_to 'My books', :mybooks %>
  <%= link_to 'Profile', profile_path(current_user) %> | 
  <% if can? :userslist, User %>
    <%= link_to 'Users list', userslist_path %> |
  <% end %>
  <%= link_to 'Logout', logout_path %>
<% else %>
  <%= link_to 'Register', register_path %>
  <%= link_to 'Log in', login_path %>
<% end %>
<%= yield %>
</body>
</html>
