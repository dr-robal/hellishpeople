<p id="notice"><%= notice %></p>

<h1>Users list</h1>
<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Profile', profile_path(user) %></td>
    <% if can? :update, User %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
    <% if can? :destroy, User %>
      <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
<%= will_paginate @user %>